{
    "window": {
        "width": 1024,
        "height": 768,
        "title": "SpaceGame — Phase 1"
    },
    "layout": {
        "rows": 2,
        "cols": 2,
        "row_stretch": [
            1,
            1
        ],
        "col_stretch": [
            3,
            1
        ]
    },
    "panels": [
        {
            "id": "nav",
            "title": "Navigation",
            "row": 0,
            "col": 0,
            "bg": "#0b1a2b",
            "widget": "NavigationPanel"
        },
        {
            "id": "scan",
            "title": "Scanner",
            "row": 0,
            "col": 1,
            "bg": "#132233",
            "widget": "ScanPanel"
        },
        {
            "id": "comms",
            "title": "Command Console",
            "row": 1,
            "col": 0,
            "bg": "#14202d",
            "widget": "CommandsPanel",
            "menu": [
                {
                    "label": "Projects",
                    "children": [
                        {
                            "label": "View",
                            "children": [
                                {
                                    "label": "Show Active/In‑Progress",
                                    "actions": [
                                        {
                                            "panel_id": "log",
                                            "method": "show_active_projects"
                                        }
                                    ]
                                },
                                {
                                    "label": "Show Completed",
                                    "actions": [
                                        {
                                            "panel_id": "log",
                                            "method": "show_completed_tasks"
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "label": "Quick Demo Updates",
                            "children": [
                                {
                                    "label": "Mark Getting Started → Board Ship as In Progress",
                                    "actions": [
                                        {
                                            "panel_id": "log",
                                            "method": "set_task_status",
                                            "args": [
                                                "getting_started",
                                                "board_ship",
                                                "In Progress"
                                            ]
                                        }
                                    ]
                                },
                                {
                                    "label": "Mark Getting Started → Board Ship as Completed",
                                    "actions": [
                                        {
                                            "panel_id": "log",
                                            "method": "set_task_status",
                                            "args": [
                                                "getting_started",
                                                "board_ship",
                                                "Completed"
                                            ]
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                },
                {
                    "label": "Location",
                    "children": [
                        {
                            "label": "Docking Bays",
                            "children": [
                                {
                                    "label": "Board Ship",
                                    "actions": [
                                        {
                                            "panel_id": "nav",
                                            "method": "board_ship"
                                        },
                                        {
                                            "panel_id": "scan",
                                            "method": "show_location"
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "id": "log",
            "title": "Log",
            "row": 1,
            "col": 1,
            "bg": "#0f1822",
            "widget": "LogPanel"
        }
    ]
}